page {
  background-color: #555;
  background-size: 100%;
}

.fixed {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
}

.van-cell {
  line-height: 24rpx !important;
}

.img {
  width: 100rpx;
  height: 100rpx;
}

.text-cut {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.van-cell-text {
  width: 500rpx;
  line-height: 30rpx;
}

.van-card {
  height: 131px;
  padding: 12px !important;
  background-color: #fff !important;
  border-bottom: 1px solid #ebedf0;
}

.van-card__header {
  flex-direction: row-reverse;
}

.van-card__title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}

.van-card__footer {
  position: absolute;
  left: 10px;
  bottom: 10px;
  text-align: left !important;
}

.van-card__thumb{
  margin-left: 10px;
  margin-right: 0 !important;
}
