@import "../wxParse/wxParse.wxss";
@import "../../colorui.wxss";
@import "../../icon.wxss";

page {
  background-color: #555;
  background-size: 100%;
}

.DrawerPage {
  position: absolute;
  width: 100vw;
  height: 100vh;
  left: 0vw;
  background-color: #f1f1f1;
  transition: all 0.6s;
}

.note {
  padding: 24rpx;
}

.cu-bar {
  min-height: 64rpx;
  padding-bottom: 20rpx;
}

.cu-bar .search-form {
  margin: 0;
}

.grid.grid-square > view {
  padding: 20rpx;
}

.add {
  margin-top: 0;
  margin-bottom: 20rpx;
}

.content {
  position: relative;
  padding: 10px;
}

.content-item {
  display: block;
  height: 260rpx;
  overflow: hidden;
}

.delete {
  margin-bottom: 10rpx;
}

.position {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
}

.cu-dialog .cu-bar {
  padding: 0;
  min-height: 80rpx;
}

.cu-dialog .action {
  width: 100%;
  text-align: center;
}

.cu-btn {
  font-size: 36rpx;
}

.cu-btn.icon {
  width: 80rpx;
  height: 80rpx;
}

.time {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
