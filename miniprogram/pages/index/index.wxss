page {
  background-size: 100%;
  background: #ebedf0;
}

.fixed {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
}

.van-cell {
  line-height: 24rpx !important;
}

.img {
  width: 100rpx;
  height: 100rpx;
}

.text-cut {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.van-cell-text {
  width: 500rpx;
  line-height: 30rpx;
}

.van-card {
  height: 140px;
  padding: 12px !important;
  background-color: #fff !important;
  border-bottom: 1px solid #ebedf0;
}

.van-card__footer {
  position: absolute;
  right: 10px;
  bottom: 10px;
  color: #999;
}

.sheet button {
  color: #ee0a24;
}
