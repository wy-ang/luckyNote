<!--index.wxml-->
<view class="DrawerPage bg-yellow light">
  <view class="note">
    <view class="cu-bar search">
      <view class="search-form radius">
        <text class="icon-search"></text>
        <input type="text" placeholder="搜索便签" confirm-type="search"></input>
      </view>
    </view>
    <block wx:for="{{list}}" wx:key="key">
      <navigator class="cu-list menu-avatar" url="../addNote/addNote?id={{item._id}}">
        <view class="cu-item">
          <block wx:if="{{item.image}}">
            <image src="{{item.image}}" class="cu-avatar lg"></image>
          </block>
          <view class="content">
            <view class="text-gray text-sm flex">
              <text class="text-cut">
							<text class="cuIcon-infofill text-red  margin-right-xs"></text>
              <text>{{item.content}}</text>
              </text>
              <text class="text-grey text-xs time">{{item.time}}</text>
            </view>
          </view>
        </view>
      </navigator>
    </block>
  </view>
</view>
<navigator url="../addNote/addNote">
  <button class='cu-btn bg-red light icon position' bindtap="toAdd">
    <text class='icon-edit'></text>
  </button>
</navigator>
<view class="cu-modal bottom-modal {{modalName=='Modal'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white delete">
      <view class="action text-red" bindtap="enterModal" data-id="{{id}}">删除</view>
    </view>
    <view class='cu-bar bg-white'>
      <view class="action text-grey" bindtap="hideModal">取消</view>
    </view>
  </view>
</view>